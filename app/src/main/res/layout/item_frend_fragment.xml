<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/frend_item_goup_attr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:padding="10dp">

        <ImageView
            android:id="@+id/frend_item_check_goup"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/me_fragmentnext"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="XXX"
            android:textColor="@color/colorDrack"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/frend_item_check_goup"
            app:layout_constraintLeft_toRightOf="@+id/frend_item_check_goup"
            app:layout_constraintTop_toTopOf="@+id/frend_item_check_goup" />


        <TextView
            android:id="@+id/item_group_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/9"
            app:layout_constraintBottom_toBottomOf="@+id/frend_item_check_goup"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/frend_item_check_goup" />
    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_frend_recyler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/frend_item_goup_attr" />
</android.support.constraint.ConstraintLayout>