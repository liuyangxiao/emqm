<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <ImageView
        android:id="@+id/item_msg_activity_usericon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/item_msg_activity_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="王二小"
        app:layout_constraintRight_toLeftOf="@+id/item_msg_activity_usericon"
        app:layout_constraintTop_toTopOf="@+id/item_msg_activity_usericon" />

    <TextView
        android:id="@+id/item_msg_activity_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/npa"
        app:layout_constraintRight_toRightOf="@+id/item_msg_activity_username"
        app:layout_constraintTop_toBottomOf="@+id/item_msg_activity_username" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp" />
</android.support.constraint.ConstraintLayout>