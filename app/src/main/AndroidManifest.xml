<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.burning.emqmsg">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <!-- 相册拍照 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".EmApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.emqapp">
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.MsgActivity" />
        <activity android:name=".activity.UserinfoActivity" />
        <activity android:name=".activity.GroupActivity" />
        <activity android:name=".activity.NewFrendActivity" />

        <service
            android:name=".service.Mqservices"
            android:exported="true"
            android:persistent="true"
            android:priority="1000" />
        <service
            android:name=".service.NjobService"
            android:exported="true"
            android:permission="android.permission.BIND_JOB_SERVICE"
            android:process=":njobs" />
        <service
            android:name=".service.RtService"
            android:enabled="true"
            android:exported="true"
            android:persistent="true"
            android:priority="1000"
            android:process=":rsety" />

        <activity android:name=".activity.SearchAddActivity" />
        <activity android:name=".activity.SignupActivity" />
        <activity android:name=".activity.PermissionActivity" />
        <activity android:name=".activity.WellcomActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.AddFrendActivity" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.burning.emqmsg.Myfileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>

        <activity android:name=".activity.SetUserInfoActivity" />
        <activity android:name=".activity.SendDiaryActivity"></activity>
    </application>

</manifest>